@{
    ViewBag.Title = "Proveedores";
}

<div class="row" id="Index-Proveedores">
    <div class="col-12">
        <div class="card mb-4">
            <h5 class="card-header">PROVEEDORES</h5>

            <div class="card-body">
                <table id="tblProveedores" class="table table-hover table-striped table-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row" id="Form-Proveedores" style="display:none;">
    <div class="col-12">
        <div class="card mb-4">
            <h5 class="card-header">REGISTRO DE PROVEEDORES</h5>
            <div class="card-body">
                <form id="frmProveedores">
                    <div class="row">
                        <input type="hidden" class="form-control" id="idProveedor" name="idProveedor">
                        <!-- Nombre y Contacto en dos columnas -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="inputNombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="inputNombre" name="inputNombre">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="inputTelefono" class="form-label">Teléfono</label>
                                <input type="number" class="form-control" id="inputTelefono" name="inputTelefono">
                            </div>
                        </div>
                    </div>

                    <!-- Correo y Dirección en su propia fila -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="inputCorreo" class="form-label">Correo</label>
                                <input type="email" class="form-control" id="inputCorreo" name="inputCorreo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="inputDireccion" class="form-label">Dirección</label>
                                <input type="text" class="form-control" id="inputDireccion" name="inputDireccion">
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 text-end">
                        <button type="button" class="btn btn-secondary" id="btnRegresarProveedor">Regresar</button>
                        <button type="submit" class="btn btn-primary" id="btnGuardarProveedor">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/VistasJS/Catalogo/Proveedores/Proveedor.js"></script>
}
