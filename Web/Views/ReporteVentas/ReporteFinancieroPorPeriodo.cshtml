@model List<Modelo.Ventas.ReporteFinancieroVM>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Reporte Financiero por Periodo</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h1 {
                margin-bottom: 10px;
                color: #007bff;
            }

            .header p {
                margin: 0;
                font-size: 16px;
            }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: .75rem;
                vertical-align: top;
                border: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
                background-color: #007bff;
                color: #fff;
            }

            .table tbody + tbody {
                border-top: 2px solid #dee2e6;
            }

            .table th {
                background-color: #f8f9fa;
            }

            .table .total {
                font-weight: bold;
                text-align: right;
            }

        .header-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .header-logo img {
                max-width: 150px;
                height: auto;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-logo">
            <img src="~/Imagenes/logoblue.jpg" alt="Logo ZonaMovil">
        </div>
        <div class="header">
            <h1>Reporte Financiero por Periodo</h1>
            <p>Desde: @ViewBag.FechaInicio.ToString("dd/MM/yyyy") Hasta: @ViewBag.FechaFin.ToString("dd/MM/yyyy")</p>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Fecha de Venta</th>
                    <th>Número de Factura</th>
                    <th>Cliente</th>
                    <th>Total Venta ($)</th>
                    <th>Total Costo ($)</th>
                    <th>Ganancia Bruta ($)</th>
                    <th>Descuento ($)</th>
                    <th>Ganancia Neta ($)</th>
                    <th>Vendedor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaVenta.ToString("dd/MM/yyyy")</td>
                        <td>@item.NumeroFactura</td>
                        <td>@item.Cliente</td>
                        <td>@item.TotalVenta.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                        <td>@item.TotalCosto.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                        <td>@item.GananciaBruta.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                        <td>@item.Descuento.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                        <td>@item.GananciaNeta.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                        <td>@item.Vendedor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
