@{
    ViewBag.Title = "Factura";
    Layout = null;
}
@{
    var primerItem = Model.Count > 0 ? Model[0] : null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Factura de ZonaMovil</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .factura-container {
            width: 100%;
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-sizing: border-box;
        }

        .header-factura, .detalles-factura {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .info-tienda, .info-factura-cliente {
            padding: 8px;
        }

        .info-tienda {
            text-align: left;
        }

        .info-factura-cliente {
            text-align: right;
        }

        .detalles-factura th, .detalles-factura td {
            border: 1px solid #dee2e6;
            text-align: left;
            padding: 12px;
        }

        .detalles-factura th {
            background-color: #343a40;
            color: #fff;
            text-align: center;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #6c757d;
        }

        .marca-de-agua {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            font-size: 80px;
            color: rgba(0, 123, 255, 0.1);
            z-index: 9999;
            user-select: none;
            pointer-events: none;
            white-space: nowrap;
            overflow: visible;
            width: 220%;
            height: 220%;
        }

        h2, h3 {
            margin: 0;
        }

        h2 {
            color: #007bff;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        h3 {
            color: #343a40;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .subtotal, .impuesto, .descuento, .total {
            font-weight: bold;
            text-align: right;
        }

        .detalles-factura .total {
            background-color: #343a40;
            color: #fff;
        }

        .detalles-factura tfoot tr {
            border-top: 2px solid #dee2e6;
        }

        .header-logo {
            text-align: center;
        }

            .header-logo img {
                max-width: 150px;
                height: auto;
            }

        .header-info {
            text-align: center;
            margin-top: 10px;
        }

            .header-info p {
                margin: 0;
                font-size: 14px;
            }

            .header-info h1 {
                margin: 0;
                font-size: 24px;
                color: #007bff;
            }
    </style>
</head>

<body>
    @if (primerItem != null && !primerItem.Activo)
    {
        <div class="marca-de-agua">Anulado</div>
    }
    <div class="factura-container">
        <div class="header-logo">
            <img src="~/Imagenes/logoblue.jpg" alt="Logo ZonaMovil">
        </div>
        <div class="header-info">
            <h1>ZonaMovil</h1>
            <p>Barrio la Esperanza</p>
        </div>
        <table class="header-factura">
            <tr>
                <td class="info-tienda">
                    <h2>@primerItem.NumeroFactura</h2>
                    <p>@primerItem.Fecha.ToString("dd/MM/yyyy")</p>
                </td>
                <td class="info-factura-cliente">
                    <p>@primerItem.Cliente</p>
                </td>
            </tr>
        </table>

        <h3 style="text-align: center;">Factura de Venta</h3>

        <table class="detalles-factura">
            <thead>
                <tr>
                    <th>Descripción del Producto</th>
                    <th>IMEI (si aplica)</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreProducto @(!string.IsNullOrEmpty(item.Almacenamiento) ? " - " + item.Almacenamiento : "") @(!string.IsNullOrEmpty(item.RAM) ? " - " + item.RAM : "")</td>
                        <td>NOHAY</td>
                        <td>@item.Cantidad</td>
                        <td>@item.PrecioUnitario.ToString("C")</td>
                        <td>@(item.PrecioUnitario * item.Cantidad).ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="subtotal">Subtotal</td>
                    <td>@(primerItem.Subtotal).ToString("C")</td>
                </tr>
                <tr>
                    <td colspan="4" class="impuesto">IVA</td>
                    <td>@primerItem.Impuesto.ToString("C")</td>
                </tr>
                <tr>
                    <td colspan="4" class="descuento">Descuento</td>
                    <td>@primerItem.Descuento.ToString("C")</td>
                </tr>
                <tr>
                    <td colspan="4" class="total">Total</td>
                    <td>@primerItem.Total.ToString("C")</td>
                </tr>
            </tfoot>
        </table>

        <p class="footer">Gracias por su compra en ZonaMovil</p>
    </div>
</body>
</html>
